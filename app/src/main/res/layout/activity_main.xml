<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.jimoffice.omnisecondstestcalendar.MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/updateChar"
        android:id="@+id/displayChar"
        android:textSize="150sp"
        android:textColor="#f40b0b"
        android:gravity="center_vertical|center_horizontal"
        android:editable="false"
        android:elegantTextHeight="false"
        android:typeface="serif"
        android:textAlignment="center"
        android:singleLine="true"
        android:layout_below="@+id/ntpClock"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Press Button to Exit"
        android:id="@+id/button"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="54dp"
        android:onClick="exitButton" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/displayChar2"
        android:gravity="center_vertical|center_horizontal"
        android:textAlignment="center"
        android:textColor="#744343"
        android:textSize="150sp"
        android:typeface="serif"
        android:layout_below="@+id/displayChar"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ntpClock"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignLeft="@+id/button"
        android:layout_alignStart="@+id/button"
        android:textColor="#0d0d0d"
        android:textSize="20sp"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:gravity="center_vertical|center_horizontal"
        android:singleLine="true"
        android:textAlignment="center"
        android:textIsSelectable="false" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/systemClock"
        android:textColor="#0d0d0d"
        android:textSize="20sp"
        android:gravity="center_vertical|center_horizontal"
        android:singleLine="true"
        android:textAlignment="center"
        android:textIsSelectable="false"
        android:layout_below="@+id/displayChar"
        android:layout_alignLeft="@+id/button"
        android:layout_alignStart="@+id/button"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
